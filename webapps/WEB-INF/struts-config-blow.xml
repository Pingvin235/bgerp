<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<action-mappings>
		<action path="/user/plugin/blow/board" parameter="action" type="ru.bgerp.plugin.blow.struts.action.BoardAction" name="form" scope="request">
			<forward name="board" path="/WEB-INF/jspf/user/plugin/blow/board/board.jsp"/>
			<forward name="show" path="/WEB-INF/jspf/user/plugin/blow/board/show.jsp"/>
		</action>
		<action path="/open/plugin/blow/board" parameter="action" type="ru.bgerp.plugin.blow.struts.action.open.BoardAction" name="form" scope="request">
			<forward name="show" path="/WEB-INF/jspf/open/plugin/blow/show.jsp"/>
		</action>
	</action-mappings>
</struts-config>
